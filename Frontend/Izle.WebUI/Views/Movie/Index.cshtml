@* Views/Movie/Index.cshtml *@
@model List<Izle.WebUI.Models.Movie.Movie>

@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalMovies = ViewBag.TotalMovies ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Filmler</h2>
        <span class="badge bg-secondary">Toplam @totalMovies film</span>
    </div>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@movie.CoverImageUrl" class="card-img-top" alt="@movie.Title" style="height: 400px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">
                            <small class="text-muted">@movie.Category</small><br />
                            <span class="badge bg-warning">⭐ @movie.Rating</span>
                        </p>
                        <a href="/Movie/MovieDetail/@movie.MovieId" class="btn btn-primary btn-sm">Detay</a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <hr />
                            <div class="d-grid gap-2">
                                <button class="btn btn-success btn-sm movie-status-btn"
                                        data-movie-id="@movie.MovieId"
                                        data-status="Watched">
                                    ✓ İzledim
                                </button>
                                <button class="btn btn-primary btn-sm movie-status-btn"
                                        data-movie-id="@movie.MovieId"
                                        data-status="Watching">
                                    ▶ İzliyorum
                                </button>
                                <button class="btn btn-warning btn-sm movie-status-btn"
                                        data-movie-id="@movie.MovieId"
                                        data-status="WatchLater">
                                    🕐 Sonra İzle
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav aria-label="Movie pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@(currentPage == 1 ? "#" : $"/Movie/Index?page={currentPage - 1}")" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- First Page -->
                @if (currentPage > 3)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Movie/Index?page=1">1</a>
                    </li>
                    @if (currentPage > 4)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                <!-- Page Numbers -->
                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="/Movie/Index?page=@i">@i</a>
                    </li>
                }

                <!-- Last Page -->
                @if (currentPage < totalPages - 2)
                {
                    @if (currentPage < totalPages - 3)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="/Movie/Index?page=@totalPages">@totalPages</a>
                    </li>
                }

                <!-- Next Button -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@(currentPage == totalPages ? "#" : $"/Movie/Index?page={currentPage + 1}")" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Load movie statuses on page load
        @if (User.Identity.IsAuthenticated)
        {
            <text>
                    loadMovieStatuses();
            </text>
        }

                $('.movie-status-btn').click(function () {
                    const movieId = $(this).data('movie-id');
                    const status = $(this).data('status');
                    const button = $(this);

                    $.ajax({
                        url: '/UserMovie/UpdateStatus',
                        type: 'POST',
                        data: { movieId: movieId, status: status },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Başarılı!',
                                    text: 'Film listenize eklendi',
                                    timer: 1500,
                                    showConfirmButton: false
                                });

                                // Tüm butonları normal yap
                                button.closest('.d-grid').find('button').removeClass('active');
                                // Tıklanan butonu aktif yap
                                button.addClass('active');
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Hata!',
                                    text: 'İşlem başarısız oldu'
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata!',
                                text: 'Bir hata oluştu'
                            });
                        }
                    });
                });

            function loadMovieStatuses() {
                $('.card').each(function () {
                    const card = $(this);
                    const movieId = card.find('.movie-status-btn').first().data('movie-id');

                    if (movieId) {
                        $.ajax({
                            url: '/UserMovie/GetStatus',
                            type: 'GET',
                            data: { movieId: movieId },
                            success: function (response) {
                                if (response.status) {
                                    card.find('.movie-status-btn[data-status="' + response.status + '"]').addClass('active');
                                }
                            }
                        });
                    }
                });
            }
        });
    </script>

    <style>
        .movie-status-btn.active {
            opacity: 1;
            font-weight: bold;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5);
        }

        .pagination .page-link {
            color: #007bff;
        }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }

        .pagination .page-item.disabled .page-link {
            color: #6c757d;
        }
    </style>
}