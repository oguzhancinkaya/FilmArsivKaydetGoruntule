@model Movie
@{
    ViewData["Title"] = "MovieDetail";
    Layout = "~/Views/HFLayout/_HFLayout.cshtml";
}

	<div class="details__bg" data-bg="~/web/img/home/home__bg.jpg"></div>

	<div class="container">
		<div class="row">
			<div class="col-12">
			<h1 class="details__title">@Model.Title</h1>
			</div>
			<div class="col-10">
				<div class="card card--details card--series">
					<div class="row">


						<!-- card cover -->
						<div class="col-12 col-sm-4 col-md-4 col-lg-3 col-xl-3">
							<div class="card__cover">
							<img src="@Model.CoverImageUrl" alt="">
							</div>
						</div>
						<div class="col-12 col-sm-8 col-md-8 col-lg-9 col-xl-9">
							<div class="card__content">
								<div class="card__wrap">
								<span class="card__rate"><i class="icon ion-ios-star"></i>@Model.Rating</span>
								</div>

								<ul class="card__meta">
									<li>
										<span>Tür:</span>
									<a href="#">@Model.Category</a>
									</li>
								<li><span>Çıkış Yılı:</span>@Model.ReleaseDate</li>
								</ul>

								<div class="card__description card__description--details">
								@Model.Description
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


