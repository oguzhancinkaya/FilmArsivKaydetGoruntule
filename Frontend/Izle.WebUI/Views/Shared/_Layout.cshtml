@using Izle.EntityLayer.Concrete
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Izle.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Izle.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Izle.WebUI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="filmsDropdown" role="button" data-bs-toggle="dropdown">
                                FİLMLER
                            </a>
                            <ul class="dropdown-menu">
                                <li>  <a class="nav-link text-dark" asp-area="Index" asp-controller="Movie" asp-action="Index">FİLM LİSTESİ</a></li>
                                <li>  <a class="nav-link text-dark" asp-area="Watched" asp-controller="UserMovie" asp-action="Watched">İZLEDİKLERİM</a></li>
                                <li>  <a class="nav-link text-dark" asp-area="WatchLater" asp-controller="UserMovie" asp-action="WatchLater">İZLEYECEKLERİM</a></li>
                            </ul>
                        </li>

                        <!-- DİZİLER -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="seriesDropdown" role="button" data-bs-toggle="dropdown">
                                DİZİLER
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">İZLEDİKLERİM</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">İZLİYORUM</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">İZLEYECEKLERİM</a></li>
                            </ul>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="header__nav-item">
                                <form asp-controller="Login" asp-action="LogOut" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="header__nav-link btn btn-link p-0 text-danger" style="border:none; background:none;">
                                        ÇIKIŞ
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>

                    <div class="header__auth">

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <span class="header__user" style="color: #fff;">
                                Hoşgeldin, <strong style="color:#fff;">@UserManager.GetUserName(User)</strong>
                            </span>
                        }
                        else
                        {
                            <a href="/Login/Index/" class="header__sign-in">
                                <i class="icon ion-ios-log-in"></i>
                                <span>GİRİŞ YAP</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Izle.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
